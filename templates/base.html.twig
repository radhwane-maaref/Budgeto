<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
		<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
		<style>
			body {
				background-color: #f8f9fa;
			}

			.navbar-brand {
				font-weight: bold;
				color: #3498db;
			}

			.nav-link {
				color: #495057 !important;
			}

			.nav-link.active,
			.nav-link:hover {
				color: #007bff !important;
			}

			.main-content {
				padding: 2rem;
			}
		</style>
		{% block stylesheets %}{% endblock %}
	</head>
	<body>

		<!-- Navbar -->
		<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4">
			<a class="navbar-brand" href="{{ path('app_dashboard') }}">
				<i class="fas fa-coins"></i>
				Budgeto
			</a>
			<div class="collapse navbar-collapse">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link {% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}" href="{{ path('app_dashboard') }}">
							<i class="fas fa-chart-line"></i>
							Dashboard
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {% if app.request.attributes.get('_route') == 'app_expenses_index' %}active{% endif %}" href="{{ path('app_expenses_index') }}">
							<i class="fas fa-credit-card"></i>
							Expenses


						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {% if app.request.attributes.get('_route') == 'app_budget_index' %}active{% endif %}" href="{{ path('app_budget_index') }}">
							<i class="fas fa-wallet"></i>
							Budget
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {% if app.request.attributes.get('_route') == 'app_saving_goal_index' %}active{% endif %}" href="{{ path('app_saving_goal_index') }}">
							<i class="fas fa-piggy-bank"></i>
							Saving Goals
						</a>
					</li>

				<li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'documentation' %}active{% endif %}"
                       href="{{ path('documentation') }}">
                        <i class="fas fa-book"></i> Documentation
                    </a>
                </li>

					{# <li class="nav-item">
					                    <a class="nav-link {% if app.request.attributes.get('_route') == 'expense_report' %}active{% endif %}"
					                       href="{{ path('expense_report') }}">
					                        <i class="fas fa-file-alt"></i> Reports
					                    </a>
					                </li>
					                <li class="nav-item">
					                    <a class="nav-link {% if app.request.attributes.get('_route') == 'account_settings' %}active{% endif %}"
					                       href="{{ path('account_settings') }}">
					                        <i class="fas fa-user-cog"></i> Account
					                    </a>
					                </li>  #}
				</ul>
				<ul class="navbar-nav">
					{% if app.user %}
						<li class="nav-item">
							<a class="nav-link text-danger" href="{{ path('app_logout') }}">
								<i class="fas fa-sign-out-alt"></i>
								Logout
							</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link text-primary" href="{{ path('app_register') }}">
								<i class="fas fa-user-plus"></i>
								Sign Up
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-success" href="{{ path('app_login') }}">
								<i class="fas fa-sign-in-alt"></i>
								Login
							</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>

		<!-- Main Content -->
		<div class="main-content container"> {% block body %}{% endblock %}
			</div>
			<footer class="bg-white text-center text-muted py-4 border-top mt-5">
				<div class="container">
					<p class="mb-1">&copy;
						{{ "now"|date("Y") }}
						Budgeto. All rights reserved.</p>
					<small class="d-block">Made in üáπüá≥</small>
				</div>
			</footer>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}
				{% block importmap %}
					{{ importmap('app') }}
				{% endblock %}
			{% endblock %}

		</body>
	</html>
