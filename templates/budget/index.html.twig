{% extends 'base.html.twig' %}

{% block title %}My Budgets
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="mb-4">
			<i class="bi bi-cash-coin me-2 text-success"></i>
			My budgets
		</h1>

		<div class="table-responsive">
			<table class="table table-striped table-hover align-middle">
				<thead class="table-dark">
					<tr>

						<th scope="col">Amount</th>
						<th scope="col">Date</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for budget in budgets %}
						<tr>

							<td>{{ budget.amount }}</td>
							<td>{{ budget.date ? budget.date|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<div class="d-flex gap-2">
									<a href="{{ path('app_budget_show', {'id': budget.id}) }}" class="btn btn-sm btn-primary">Show</a>
									<a href="{{ path('app_budget_edit', {'id': budget.id}) }}" class="btn btn-sm btn-warning">Edit</a>
									<form action="{{ path('app_budget_delete', {'id': budget.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this budget?');">
										<input type="hidden" name="_method" value="DELETE">
										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ budget.id) }}">
										<button type="submit" class="btn btn-sm btn-danger">Delete</button>
									</form>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4" class="text-center">No records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<a href="{{ path('app_budget_new') }}" class="btn btn-success mt-3">Create New</a>
	</div>
{% endblock %}
