                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title">Current Balance</h5>
                    <p class="card-text fs-4">{{ (total_income - total_expenses)|number_format(2, '.', ',') }} TND</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title">Savings</h5>
                    <p class="card-text text-warning fs-4">{{ savings|default(0)|number_format(2, '.', ',') }} TND</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">Spending by Category</div>
                <div class="card-body">
                    <canvas id="spendingChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">Income vs Expenses</div>
                <div class="card-body">
                    <canvas id="incomeExpenseChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">Recent Transactions</div>
        <div class="card-body">
            <ul class="list-group">
                {% for tx in recent_transactions %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>{{ tx.date|date('Y-m-d') }} - {{ tx.category }}: {{ tx.description }}</span>
                        <span class="badge bg-{{ tx.amount < 0 ? 'danger' : 'success' }}">{{ tx.amount|number_format(2) }} TND</span>
                    </li>
                {% else %}
                    <li class="list-group-item">No transactions yet.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Budget Status -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-light">Budget Status</div>
        <div class="card-body">
            {% for category, data in budget_status %}
                <p class="mb-1">{{ category }} ({{ data.spent|number_format(2) }} / {{ data.budget|number_format(2) }} TND)</p>
                <div class="progress mb-3">
                    {% set percent = (data.spent / data.budget * 100)|round %}
                    <div class="progress-bar bg-{{ percent < 80 ? 'success' : (percent < 100 ? 'warning' : 'danger') }}"
                         style="width: {{ percent > 100 ? 100 : percent }}%">
                        {{ percent }}%
                    </div>
                </div>
            {% else %}
                <p>No budget data available.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const spendingChart = new Chart(document.getElementById('spendingChart'), {
            type: 'pie',
            data: {
                labels: {{ spending_labels|json_encode|raw }},
                datasets: [{
                    data: {{ spending_data|json_encode|raw }},
                    backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff'],
                }]
            }
        });

        const incomeExpenseChart = new Chart(document.getElementById('incomeExpenseChart'), {
            type: 'bar',
            data: {
                labels: {{ income_expense_labels|json_encode|raw }},
                datasets: [
                    {
                        label: 'Income',
                        data: {{ income_data|json_encode|raw }},
                        backgroundColor: '#36a2eb'
                    },
                    {
                        label: 'Expenses',
                        data: {{ expense_data|json_encode|raw }},
                        backgroundColor: '#ff6384'
                    }
                ]
            }
        });
    </script>
{% endblock %}  #}