{{ form_start(form) }}

<!-- Amount Field -->
<div class="mb-3">
    {{ form_label(form.amount, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.amount, {
        'attr': {
            'class': 'form-control' ~ (form.amount.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    {% for error in form.amount.vars.errors %}
        <div class="invalid-feedback">
            {{ error.message }}
        </div>
    {% endfor %}
</div>

<!-- Description Field -->
<div class="mb-3">
    {{ form_label(form.description, 'Description') }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter a description'}}) }}
    {{ form_errors(form.description) }}
</div>

<!-- Category Dropdown -->
<div class="mb-3">
    {{ form_label(form.category, 'Category') }}
    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
    {{ form_errors(form.category) }}
</div>
<div class="mb-3">
    {{ form_label(form.budget, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.budget, {
        'attr': {
            'class': 'form-control' ~ (form.budget.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    {% for error in form.budget.vars.errors %}
        <div class="invalid-feedback">
            {{ error.message }}
        </div>
    {% endfor %}
</div>


<!-- Save Button -->
<div class="mb-3 text-center">
    <button type="submit" class="btn btn-success px-4 py-2">
        <i class="bi bi-check-circle me-1"></i> {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}
