{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

    <div class="col-md-6">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.targetAmount, null, {'label_attr': {'class': 'form-label'}}) }}
        <div class="input-group">
            {{ form_widget(form.targetAmount, {'attr': {'class': 'form-control'}}) }}
            <span class="input-group-text">DT</span>
        </div>
        {{ form_errors(form.targetAmount) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.currentAmount, null, {'label_attr': {'class': 'form-label'}}) }}
        <div class="input-group">
            {{ form_widget(form.currentAmount, {'attr': {'class': 'form-control'}}) }}
            <span class="input-group-text">DT</span>
        </div>
        {{ form_errors(form.currentAmount) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.deadline, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.deadline, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.deadline) }}
    </div>

    <div class="col-12 d-flex justify-content-center">
        <button class="btn btn-success">{{ button_label|default('Save') }}</button>
    </div>

{{ form_end(form) }}
