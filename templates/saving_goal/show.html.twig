{% extends 'base.html.twig' %}

{% block title %}SavingGoal{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Saving Goal Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>

                        <tr>
                            <th scope="row">Title</th>
                            <td>{{ saving_goal.title }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Target Amount</th>
                            <td>{{ saving_goal.targetAmount }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Current Amount</th>
                            <td>{{ saving_goal.currentAmount }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Deadline</th>
                            <td>{{ saving_goal.deadline ? saving_goal.deadline|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    <a href="{{ path('app_saving_goal_index') }}" class="btn btn-secondary">Back to list</a>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
